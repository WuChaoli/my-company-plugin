{
  "permissions": {
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run build)",
      "Bash(npm run test:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(pytest:*)",
      "Read(./src/**)",
      "Read(./tests/**)",
      "Read(./package.json)",
      "Read(./tsconfig.json)",
      "WebFetch(domain:localhost)",
      "WebFetch(domain:127.0.0.1)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(docker:*)",
      "Edit",
      "Write",
      "WebFetch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(npm publish:*)",
      "Bash(rm -rf:*)"
    ],
    "defaultMode": "acceptEdits"
  }
}
